{
    "openapi": "3.0.3",
    "info": {
        "title": "Unites de Mesure API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:{{port}}/api",
            "description": "Local development environment",
            "variables": {
                "ip_address": {
                    "default": "http://localhost",
                    "description": "Ip address"
                },
                "port": {
                    "enum": [
                        "80",
                        "8000",
                        "8001"
                    ],
                    "default": "8000"
                }
            }
        },
        {
            "url": "http://54.198.204.208:{{port}}/api",
            "description": "Development code review environment",
            "variables": {
                "ip_address": {
                    "enum": [
                        "http://54.198.204.208",
                        "https://dev.labelstrust.com"
                    ],
                    "default": "http://54.198.204.208",
                    "description": "Ip address"
                },
                "port": {
                    "enum": [
                        "80",
                        "8000",
                        "8001"
                    ],
                    "default": "80"
                }
            }
        },
        {
            "url": "https://test.labelstrust.com:{{port}}/api",
            "description": "Testing environment",
            "variables": {
                "ip_address": {
                    "default": "https://test.labelstrust.com",
                    "description": "Ip address"
                },
                "port": {
                    "enum": [
                        "80",
                        "8000",
                        "8001"
                    ],
                    "default": "80"
                }
            }
        },
        {
            "url": "https://staging.labelstrust.com:{{port}}/api",
            "description": "Staging environment",
            "variables": {
                "ip_address": {
                    "default": "https://staging.labelstrust.com",
                    "description": "Ip address"
                },
                "port": {
                    "enum": [
                        "80",
                        "8000",
                        "8001"
                    ],
                    "default": "80"
                }
            }
        }
    ],
  "paths": {
    "/unite_travailles": {
      "get": {
        "summary": "Retrieve all units of work",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UniteTravailles"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new work unit",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UniteTravailleInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created with Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UniteTravaille"
                }
              }
            }
          }
        }
      }
    },
    "/unite_travailles/{id}": {
      "get": {
        "summary": "Retrieve a unit of work by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UniteTravaille"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Edit an existing unit of work",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UniteTravailleInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Updated with Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UniteTravaille"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete an existing unit of work",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Unit of work deleted with Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UniteTravaille": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier of the work unit"
          },
          "type_of_unite_travaille": {
            "type": "string",
            "description": "Type of work unit"
          },
          "unite_mesure_id": {
            "type": "string",
            "description": "Identifier of the associated unit of measurement"
          },
          "article_id": {
            "type": "string",
            "description": "Associated article identifier"
          },
          "can_be_deleted": {
            "type": "boolean",
            "description": "Indicates whether the unit of work can be deleted"
          }
        }
      },
      "UniteTravailleInput": {
        "type": "object",
        "properties": {
          "type_of_unite_travaille": {
            "type": "string",
            "description": "Type of work unit"
          },
          "unite_mesure_id": {
            "type": "string",
            "description": "Identifier of the associated unit of measurement"
          },
          "article_id": {
            "type": "string",
            "description": "Associated article identifier"
          },
          "can_be_deleted": {
            "type": "boolean",
            "description": "Indicates whether the unit of work can be deleted"
          }
        }
      }
    }
  }
}    