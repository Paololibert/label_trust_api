                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/UniteTravaille"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/unite_travailles/{id}": {
      "get": {
