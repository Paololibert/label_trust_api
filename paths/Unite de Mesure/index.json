{
    "openapi": "3.0.3",
    "info": {
        "title": "Unites de Mesure API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:{{port}}/api",
            "description": "Local development environment",
            "variables": {
                "ip_address": {
                    "default": "http://localhost",
                    "description": "Ip address"
                },
                "port": {
                    "enum": [
                        "80",
                        "8000",
                        "8001"
                    ],
                    "default": "8000"
                }
            }
        },
        {
            "url": "http://54.198.204.208:{{port}}/api",
            "description": "Development code review environment",
            "variables": {
                "ip_address": {
                    "enum": [
                        "http://54.198.204.208",
                        "https://dev.labelstrust.com"
                    ],
                    "default": "http://54.198.204.208",
                    "description": "Ip address"
                },
                "port": {
                    "enum": [
                        "80",
                        "8000",
                        "8001"
                    ],
                    "default": "80"
                }
            }
        },
        {
            "url": "https://test.labelstrust.com:{{port}}/api",
            "description": "Testing environment",
            "variables": {
                "ip_address": {
                    "default": "https://test.labelstrust.com",
                    "description": "Ip address"
                },
                "port": {
                    "enum": [
                        "80",
                        "8000",
                        "8001"
                    ],
                    "default": "80"
                }
            }
        },
        {
            "url": "https://staging.labelstrust.com:{{port}}/api",
            "description": "Staging environment",
            "variables": {
                "ip_address": {
                    "default": "https://staging.labelstrust.com",
                    "description": "Ip address"
                },
                "port": {
                    "enum": [
                        "80",
                        "8000",
                        "8001"
                    ],
                    "default": "80"
                }
            }
        }
    ],
    "paths": {
        "/unite_mesures": {
            "get": {
                "summary": "Get all units of measurement",
                "description": "Returns the list of all units of measurement registered in the system.",
                "responses": {
                  "200": {
                    "description": "Success",
                    "content": {
                      "application/json": {
                        "schema": {
                          "type": "object",
                          "properties": {
                            "status": {
                              "type": "boolean",
                              "description": "Indicates whether the query completed successfully."
                            },
                            "message": {
                              "type": "string",
                              "nullable": true,
                              "description": "Response message, if applicable."
                            },
                            "data": {
                              "type": "object",
                              "properties": {
                                "current_page": {
                                  "type": "integer",
                                  "description": "Current page number."
                                },
                                "data": {
                                  "type": "array",
                                  "items": {
                                    "$ref": "#/components/schemas/UniteMesure"
                                  },
                                  "description": "List of units of measurement."
                                },
                                "first_page_url": {
                                  "type": "string",
                                  "format": "uri",
                                  "description": "URL of the first results page."
                                },
                                "from": {
                                  "type": "integer",
                                  "description": "Index of the first entry in the results page."
                                },
                                "last_page": {
                                  "type": "integer",
                                  "description": "Number of the last results page."
                                },
                                "last_page_url": {
                                  "type": "string",
                                  "format": "uri",
                                  "description": "URL of the last results page."
                                },
                                "links": {
                                  "type": "array",
                                  "items": {
                                    "type": "object",
                                    "properties": {
                                      "url": {
                                        "type": "string",
                                        "format": "uri",
                                        "nullable": true,
                                        "description": "URL of the linked page."
                                      },
                                      "label": {
                                        "type": "string",
                                        "description": "Link label."
                                      },
                                      "active": {
                                        "type": "boolean",
                                        "description": "Indicates whether the link is active or not."
                                      }
                                    }
                                  },
                                  "description": "Links to other results pages."
                                },
                                "next_page_url": {
                                  "type": "string",
                                  "format": "uri",
                                  "nullable": true,
                                  "description": "URL of the next results page."
                                },
                                "path": {
                                  "type": "string",
                                  "format": "uri",
                                  "description": "Base URL of the request."
                                },
                                "per_page": {
                                  "type": "integer",
                                  "description": "Number of elements per page."
                                },
                                "prev_page_url": {
                                  "type": "string",
                                  "format": "uri",
                                  "nullable": true,
                                  "description": "URL of the previous results page."
                                },
                                "to": {
                                  "type": "integer",
                                  "description": "Index of the last entry in the results page."
                                },
                                "total": {
                                  "type": "integer",
                                  "description": "Total number of units of measurement in the system."
                                }
                              }
                            },
                            "status_code": {
                              "type": "integer",
                              "description": "HTTP status code of the response."
                            }
                          }
                        }
                      }
                    }
                  }
                }
            },
            "post": {
              "summary": "Créer une nouvelle unité de mesure",
              "description": "Crée une nouvelle unité de mesure avec les détails fournis.",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/UniteMesureInput"
                    }
                  }
                }
              },
              "responses": {
                "201": {
                  "description": "Créé avec succès",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/UniteMesure"
                      }
                    }
                  }
                }
              }
            }
        },
        "/unite_mesures/{id}": {
          "get": {  
            "summary": "Retrieve a unit of measure by ID",
            "description": "Retrieves details of a single unit of measurement from its unique identifier.",
            "parameters": [
              {
                "name": "id",
                "in": "path",
                "required": true,
                "schema": {
                  "type": "string",
                  "format": "uuid",
                  "description": "Unique identifier of the unit of measure to retrieve."
                }
              }
            ],
            "responses": {
              "200": {
                "description": "Success",
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/UniteMesure"
                    }
                  }
                }
              }
            }
          },
          "put": {
            "summary": "Mettre à jour une unité de mesure existante",
            "description": "Met à jour les détails d'une unité de mesure existante avec les nouvelles informations fournies.",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/UniteMesureInput"
                  }
                }
              }
            },
            "responses": {
              "201": {
                "description": "Mise à jour réussie",
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/UniteMesure"
                    }
                  }
                }
              }
            }
          },
          "delete": {
            "summary": "Supprimer une unité de mesure existante",
            "description": "Permet de supprimer une unité de mesure existante dans le système.",
            "parameters": [
              {
                "in": "path",
                "name": "id",
                "required": true,
                "description": "Identifiant de l'unité de mesure à supprimer.",
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              }
            ],
            "responses": {
              "204": {
                "description": "Unité de mesure supprimée avec succès."
              }
            }
          }

        }
        
    },
    "components": {
      "schemas": {
        "UniteMesure": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "format": "uuid",
              "description": "Identifiant unique de l'unité de mesure."
            },
            "name": {
              "type": "string",
              "description": "Nom de l'unité de mesure."
            },
            "symbol": {
              "type": "string",
              "description": "Symbole de l'unité de mesure."
            }
          }
        },
        "UniteMesureInput": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Nom de l'unité de mesure."
            },
            "symbol": {
              "type": "string",
              "description": "Symbole de l'unité de mesure."
            }
          }
        }
      }
    }
    

}