{
    "PeriodeExerciceRequest": {
        "type": "object",
        "required": [
            "name",
            "date_debut_periode",
            "date_fin_periode"
        ],
        "properties": {
            "name": {
                "$ref": "../field_name.json#/FieldName",
                "unique": true,
                "example": "Annee Fiscal",
                "default": "Annee Fiscal",
                "description": "Intitule of the periode exercice"
            },
            "date_debut_periode": {
                "type": "string",
                "format": "date",
                "pattern": "^\\d{2}/\\d{2}$",
                "nullable": false,
                "example": "01/01",
                "default": "01/01",
                "description": "Start date of the period (DD/MM)"
            },
            "date_fin_periode": {
                "type": "string",
                "format": "date",
                "pattern": "^\\d{2}/\\d{2}$",
                "nullable": false,
                "example": "31/12",
                "default": "31/12",
                "description": "End date of the period (DD/MM)"
            }
        }
    }
}