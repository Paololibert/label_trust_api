                    "default": "http://localhost",
                    "description": "Ip address"
                },
                "port": {
                    "enum": [
                        "80",
                        "8000",
                        "8001"
                    ],
                    "default": "8000"
                }
            }
        },
        {
            "url": "{{ip_address}}:{{port}}/api",
            "description": "Development code review environment",
            "variables": {
                "ip_address": {
                    "enum": [
                        "http://54.198.204.208",
                        "https://dev.labelstrust.com"
                    ],
                    "default": "http://54.198.204.208",
                    "description": "Ip address"
                },
                "port": {
                    "enum": [
                        "80",
                        "8000",
                        "8001"
                    ],
                    "default": "80"
                }
            }
        },
        {
            "url": "{{ip_address}}:{{port}}/api",
